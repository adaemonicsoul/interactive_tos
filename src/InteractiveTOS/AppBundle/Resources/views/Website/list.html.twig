{% extends "InteractiveTOSUIBundle::layout.html.twig" %}

{% block styles %}
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/interactivetosapp/css/style.css') }}"/>
{% endblock %}

{% block content %}
    <div class="col-lg-12">
        <table class="table">
            <tr>
                <th>Address</th>
                <th colspan="3">Actions</th>
            </tr>
            {% for website in websites %}
                <tr>
                    <td>{{ website.address }}</td>
                    <td><a href="{{ url('website.edit', {'id': website.id}) }}">Edit</a></td>
                    <td><a href="{{ url('website.delete', {'id': website.id}) }}">Delete</a></td>
                    <td><a href="{{ url('tos.list', {'websiteId': website.id}) }}">TOSes</a></td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}